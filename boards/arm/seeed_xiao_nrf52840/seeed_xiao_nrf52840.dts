/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include "seeed_xiao_nrf52840-pinctrl.dtsi"

/ {
	model = "Seeed Studio XIAO nRF52840";
	compatible = "seeed,xiao-nrf52840";

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-mcumgr = &uart0;
		zephyr,bt-mon-uart = &uart0;
		zephyr,bt-c2h-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &code_partition;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&gpio0 26 GPIO_ACTIVE_LOW>;
			label = "Red LED";
		};
		led1: led_1 {
			gpios = <&gpio0 6 GPIO_ACTIVE_LOW>;
			label = "Blue LED";
		};
//		expanderreset: expander_reset {
//			gpios = <&gpio1 13 GPIO_ACTIVE_LOW>;
//			label = "expander reset";
//		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 { gpios = <&gpio0 2 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>; label = "D0"; };
		button1: button_1 { gpios = <&gpio0 3 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>; label = "D1"; };
		button2: button_2 { gpios = <&gpio0 28 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>; label = "D2"; };
		button3: button_3 { gpios = <&gpio0 29 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>; label = "D3"; };
		button4: button_5 { gpios = <&gpio0 4 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>; label = "D4"; };
		button5: button_5 { gpios = <&gpio0 5 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>; label = "D5"; };
		button6: button_6 { gpios = <&gpio1 11 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>; label = "D6"; };
		button6: button_7 { gpios = <&gpio1 12 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>; label = "D7"; };
		button6: button_8 { gpios = <&gpio1 13 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>; label = "D8"; };
		button6: button_9 { gpios = <&gpio1 14 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>; label = "D9"; };
		button6: button_10 { gpios = <&gpio1 15 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>; label = "D10"; };

	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &led0;
		led1 = &led1;
		sw0 = &button0;
//		expanderreset = &expanderreset;
	};
};

&adc {
	status = "okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
	sense-edge-mask = < 0xffffffff >;
};

&gpio1 {
	status = "okay";
	sense-edge-mask = < 0xffffffff >;
};

&uart0 {
	compatible = "nordic,nrf-uart";
	current-speed = <921600>;
	status = "okay";
	pinctrl-0 = <&uart0_default>;
	pinctrl-1 = <&uart0_sleep>;
	pinctrl-names = "default", "sleep";
};

